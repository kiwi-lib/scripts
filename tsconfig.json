{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2021",
		"sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "/",
		"outDir": "./lib",
		"baseUrl": "./",
		"incremental": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"paths": {
			"@core/*": ["./src/core/*"],
			"@utils/*": ["./src/utils/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["lib", ".scripts", "**/*spec.ts"]
}
